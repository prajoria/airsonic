<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="schema302_002" author="prajoria">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="playlist" columnName="must_sync" />
            </not>
        </preConditions>
        <addColumn tableName="playlist">
            <column name="must_sync" type="int">
            </column>
        </addColumn>
        <createIndex tableName="playlist" indexName="idx_playlist_must_sync">
            <column name="must_sync"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
